#!/bin/env sh

if [ "$(emacsclient --socket-name=hecatemacs -e t)" != 't' ]; then
    return 1
fi

for name in "${@}"; do
    value=$(eval echo \"\$${name}\")
    emacsclient --socket-name=hecatemacs -e "(setenv \"${name}\" \"${value}\" )" >/dev/null
    if test "${name}" = 'NVM_BIN'; then
        emacsclient --socket-name=hecatemacs -e "(add-to-list 'exec-path \"${value}\")" >/dev/null
    fi
done

